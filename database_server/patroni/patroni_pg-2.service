[Unit]
Description=Runners to orchestrate a high-availability PostgreSQL
After=syslog.target network.target

[Service]
Type=simple

User=postgres
Group=postgres

ExecStart=/usr/local/bin/patroni /etc/pg-2.yml

KillMode=process

TimeoutSec=30

Restart=always

[Install]
WantedBy=multi-user.targ
